@model EntityLayer.Concrete.Announcement

@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>EditAnnouncement</h1>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Duyuru Güncellenmesi</h4>
            <p class="card-description">
               Bu sayfada duyurularınızı güncelleyebilirsiniz
            </p>
            <form method="post" class="forms-sample">
                @Html.HiddenFor(x => x.AnnouncementID)
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" placeholder="Başlık Giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" class="form-control" placeholder="Tarih Giriniz" asp-for="Date">
                </div>
                <div class="form-group">
                    <label>Açıklama </label>
                    <textarea cols="30" rows="5" class="form-control" asp-for="Description">
                    </textarea>
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>